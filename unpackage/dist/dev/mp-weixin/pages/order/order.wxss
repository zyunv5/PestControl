
.order{
	width: 100%;
	height: 100%;
	background-color: rgb(234,234,234);
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding-top: 85rpx;
}
.order-switch{
	width: 576rpx;
	height: 115rpx;
	margin: 0 auto;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	background-color: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.switch-list{
	width: 50%;
	height: 115rpx;
	line-height: 115rpx;
	text-align: center;
}
.switch-select{
	background-color: rgb(209,209,209);
}
.order-content{
	width: 576rpx;
	margin: 0 auto;
}

